##N20
#int('9.8') provoquerait une erreur, car '9.8' n'est pas un entier valide

try:
    print("\nVoilà la solution : ", int('9.8') == 10)
except ValueError:
    print("\nErreur : '9.8' ne peut pas être converti en entier.")
    

##N21
heures = int(input("\nEntrez le nombre d\'heures travaillées cette semaine : "))
taux_horaire = float(input("Entrez votre taux horaire : "))
salaire = heures * taux_horaire
print(f"Votre salaire hebdomadaire est : {salaire} ")

##N22
year = int(input("\nEntrer le nombre d\'années que vous avez vécues : "))
secondes_par_année = 365 * 24 * 60 * 60
print(f"Vous avez vécu environ {year * secondes_par_année} secondes.")


