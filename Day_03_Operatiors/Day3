##EXERCICE 1

age = 19
height = 1.75  
numComplex = 4 + 3j

base = int(input("Entrer la  base : "))
hauteur = int(input("Entrer la hauteur : "))
zone = 0.5 * base * hauteur
 
print(f"La zone du triangle est : {zone}")


A= int(input("Entrer la valeur du côté A : "))
B= int(input("Entrer la valeur du côté B : "))
C= int(input("Entrer la valeur du côté C : "))

perimêtre = A + B + C
print(f"\nLe périmêtre du triangle est : {perimêtre}")

length = float(input("Entrer la longueur : "))
width = float(input("Entrer la largeur : "))
area_rectangle= length * width
perimeter_rectangle = 2 * (length + width)
print(f"\nL'aire du rectangle est : {area_rectangle}")

##N7

rayon = float(input("Entrer le rayon du cercle : "))
pi = 3.14
aire_cercle = pi * rayon * rayon
circonference = 2 * pi * rayon
print(f"\nL'aire du cercle est : {aire_cercle}")

##N8
#equation y = 2x -2 -> pente m = 2
m_equation = 2
x_intercept = 1
y_intercept = -2
print(f"\nLa pente est : {m_equation}, l'intercept en x est : {x_intercept}, l'intercept en y est : {y_intercept}")

##N9
x1, y1 = 2, 2
x2, y2 = 6, 10
m_points = (y2 - y1) / (x2 - x1)
distance = ((x2 - x1)**2 + (y2 - y1)**2)**0.5
print(f"\nLa pente entre les points est : {m_points}, la distance euclidienne entre les deux points est : {distance}")

##N10
print(f"\nComparaison des pentes : pente équation = {m_equation}, pente  entre points = {m_points}")

if m_equation == m_points:
    print(f"\nLes  deux pentes sont égales.")
else:
    print(f"\nLes deux pentes sont différentes.")



##N11
print(f"\nEquation : y = x² + 6x + 9")
for x in range(-10, 5):
    y = x**2 + 6*x + 9
    print(f"x= {x}, y = {y}")
    if y == 0:
        print(f"y =0 quand x= {x}")


